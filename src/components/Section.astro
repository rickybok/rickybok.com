---
const { class: className, title, sectionId, ...rest } = Astro.props
---

<section
  id={`container-${sectionId}`}
  class:list={["flex flex-col gap-4 pt-4", className]}
  {...rest}
>
  {sectionId && <a class="anchor" id={sectionId} />}
  {
    title && (
      <h3 class="relative flex w-full items-center gap-3 pb-4 text-3xl">
        {title}
      </h3>
    )
  }
  <slot />
</section>

<style>
  .anchor {
    display: block;
    position: relative;
    top: -6em;
    visibility: hidden;
  }
</style>
