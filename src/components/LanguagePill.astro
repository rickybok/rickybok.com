---
import CountryIcon from "./CountryIcon.astro"
import Pill from "./Pill.astro"

interface Props {
  language: string
  fluency: string
  countryCode: string
}

const { language, fluency, countryCode } = Astro.props
---

<Pill label={`${language} ${fluency && `- ${fluency}`}`}>
  {
    countryCode && (
      <CountryIcon countryCode={countryCode} class="align-middle" />
    )
  }
</Pill>
