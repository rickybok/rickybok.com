---
import Pill from "./Pill.astro"
import SkillIcon from "./SkillIcon.astro"

interface Props {
  technologies: string[]
}

const technologies = Astro.props.technologies
---

<ul class="flex flex-wrap gap-2 mt-2" aria-label="Technologies used">
  {
    technologies &&
      technologies.map((skill) => {
        return (
          <Pill label={skill} class="text-base">
            <SkillIcon skill={skill} />
          </Pill>
        )
      })
  }
</ul>
